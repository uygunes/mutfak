<p id="notice"><%= notice %></p>

<h1>Mekan Kategoris</h1>

<table>
  <thead>
    <tr>
      <th>Isim</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mekan_kategoris.each do |mekan_kategori| %>
      <tr>
        <td><%= mekan_kategori.isim %></td>
        <td><%= link_to 'Show', mekan_kategori %></td>
        <td><%= link_to 'Edit', edit_mekan_kategori_path(mekan_kategori) %></td>
        <td><%= link_to 'Destroy', mekan_kategori, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

