<h1>Kullanici Listesi</h1>

<table>
  <thead>
    <tr>
      <th>Kullanicilar</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.isim %></td>
        <td><%= link_to 'Show', show_user_management_path(user) %></td>
        <td><%= link_to 'Edit', edit_user_management_path(user) %></td>
        <td><%= link_to 'Destroy', destroy_user_management_path(user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

