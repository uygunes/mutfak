<h1>Yemek Uretims</h1>

<table>
  <thead>
    <tr>
      <th>Yemek</th>
      <th>Mekan</th>
      <th>Menu</th>
      <th>Miktar</th>
      <th>Birim</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @yemek_uretims.each do |yemek_uretim| %>
      <tr>
        <td><%= yemek_uretim.yemek_id %></td>
        <td><%= yemek_uretim.mekan_id %></td>
        <td><%= yemek_uretim.menu_id %></td>
        <td><%= yemek_uretim.miktar %></td>
        <td><%= yemek_uretim.birim_id %></td>
        <td><%= link_to 'Show', yemek_uretim %></td>
        <td><%= link_to 'Edit', edit_yemek_uretim_path(yemek_uretim) %></td>
        <td><%= link_to 'Destroy', yemek_uretim, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

